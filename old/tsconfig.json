{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
